{
  "botName": "nostrifeedbot",
  "botDisplayName": "NostriFeed Bot",
  "botDescription": "ðŸ“° I sniff out the latest news from RSS feeds and drop it right into Nostr. No clickbait, just headlines!",
  "botPictureUrl": "https://files.catbox.moe/itjcqr.png",
  "feeds": [
    {
      "name": "CoinDesk",
      "url": "https://www.coindesk.com/arc/outboundfeeds/rss/",
      "enabled": false
    },
    {
      "name": "CNBC",
      "url": "https://www.cnbc.com/id/10001147/device/rss/rss.html",
      "enabled": true
    },
    {
      "name": "CNN Brasil",
      "url": "https://www.cnnbrasil.com.br/feed",
      "enabled": true
    },
    {
      "name": "New York Times",
      "url": "https://rss.nytimes.com/services/xml/rss/nyt/HomePage.xml",
      "enabled": true
    },
    {
      "name": "BBC News",
      "url": "https://feeds.bbci.co.uk/news/rss.xml",
      "enabled": true
    },
    {
      "name": "Bitcoin Magazine",
      "url": "https://bitcoinmagazine.com/feed",
      "enabled": true
    },
    {
      "name": "Decrypt",
      "url": "https://decrypt.co/feed",
      "enabled": true
    },
    {
      "name": "Portal do Bitcoin",
      "url": "https://portaldobitcoin.uol.com.br/feed/",
      "enabled": true
    },
    {
      "name": "Hacker News",
      "url": "https://news.ycombinator.com/rss",
      "enabled": true
    },
    {
      "name": "Ars Technica",
      "url": "https://feeds.arstechnica.com/arstechnica/index",
      "enabled": true
    },
    {
      "name": "The Block",
      "url": "https://www.theblock.co/rss.xml",
      "enabled": true
    },
    {
      "name": "Financial Times",
      "url": "https://www.ft.com/rss/home",
      "enabled": true
    }
  ],

  "relays": [
    "wss://relay.damus.io",
    "wss://nostr.mom",
    "wss://relay.primal.net",
    "wss://nos.lol",
    "wss://relay.mostr.pub"
  ],

  "relayOptions": {
    "maxRetries": 3,
    "reconnectDelay": 5000,
    "timeout": 10000,
    "publishTimeout": 5000,
    "maxPublishErrors": 3
  },

  "itemsPerFeed": 2,
  "maxStoredLinks": 1000,

  "filters": {
    "exclude_keywords": [
      "futebol",
      "soccer",
      "sport",
      "CNNPop",
      "CNN Esportes",
      "BBB",
      "reality show",
      "celebridade"
    ],
    "include_keywords": [],
    "exclude_categories": [
      "entertainment",
      "sports",
      "celebrity",
      "entretenimento",
      "carnaval"
    ],
    "include_categories": [],
    "exclude_domains": [],
    "min_title_length": 15,
    "max_title_length": 300,
    "date_filter": {
      "max_age_hours": 48
    }
  },

  "rateLimit": {
    "delayBetweenPosts": 5000,
    "delayBetweenFeeds": 5000,
    "publishInterval": 180,
    "jitterPercent": 30
  }
}